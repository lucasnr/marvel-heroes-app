{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"jsx": "react-native",
		"lib": ["dom", "esnext"],
		"moduleResolution": "node",
		"noEmit": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"strict": true,
		"baseUrl": "src",
		"paths": {
			"~/*": ["*"]
		}
	},
	"include": ["src"],
	"files": ["src/styles/styled.d.ts", "declarations.d.ts"]
}
